<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bacround_gradient"
        tools:context=".wlcmScreen.MainActivity">


    <TextView
            android:id="@+id/title_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="57dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="sans-serif"
            android:text="JOXEEL PASS"
            android:textAlignment="center"
            android:textColor="@color/headerTextColor"
            android:textSize="45sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="102dp"
            android:layout_alignParentTop="true" android:layout_alignParentStart="true"
            android:layout_marginLeft="57dp"
            android:layout_alignParentLeft="true" android:layout_marginRight="8dp"/>
    <EditText
            android:id="@+id/emailogin_edittext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="75dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#ffffff"
            android:drawableLeft="@drawable/ic_person_white_24dp"
            android:ems="12"
            android:hint="Email"
            android:inputType="textPersonName"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/textColor"
            android:textColorHint="@color/hintTextColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_textview" android:layout_marginTop="277dp"
            android:layout_alignParentTop="true" android:layout_alignParentStart="true" android:layout_marginLeft="75dp"
            android:layout_alignParentLeft="true" android:layout_marginRight="8dp"/>
    <EditText
            android:id="@+id/passwordlogin_edittext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-57dp"
            android:layout_marginTop="-203dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#ffffff"
            android:drawableLeft="@drawable/ic_lock_white_24dp"
            android:ems="12"
            android:hint="Password"
            android:text=""
            android:inputType="textPassword"
            android:textColor="@color/textColor"
            android:textAlignment="center"
            android:textColorHint="@color/hintTextColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/emailogin_edittext" android:layout_alignTop="@+id/button"
            android:layout_marginLeft="-57dp" android:layout_alignLeft="@+id/forget_password_textview"
            android:layout_alignStart="@+id/forget_password_textview" android:layout_marginRight="8dp"/>
    <Button
            android:id="@+id/button"
            android:layout_width="256dp"
            android:layout_height="42dp"
            android:layout_marginTop="542dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/button_shape"
            android:text="login"
            android:textColor="@android:color/background_light"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.539"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/passwordlogin_edittext" android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" android:layout_marginLeft="77dp" android:layout_marginStart="77dp"
            android:layout_alignParentLeft="true" android:layout_marginRight="8dp"/>
    <TextView
            android:id="@+id/register_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="164dp"
            android:layout_marginTop="427dp"
            android:layout_marginEnd="8dp"
            android:text="Suscribe"
            android:textColor="@color/linkTextColor"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.223"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button" android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" android:layout_marginLeft="164dp"
            android:layout_alignParentLeft="true" android:layout_marginRight="8dp"/>
    <TextView
            android:id="@+id/forget_password_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="128dp"
            android:layout_marginTop="395dp"
            android:layout_marginEnd="8dp"
            android:text="forgot password?"
            android:textColor="@color/linkTextColor"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.762"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button" android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" android:layout_marginLeft="128dp"
            android:layout_alignParentLeft="true" android:layout_marginRight="8dp"/>

</RelativeLayout>