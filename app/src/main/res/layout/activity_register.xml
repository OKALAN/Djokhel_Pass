<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegisterActivity"
        android:background="@drawable/bacround_gradient">


    <ImageView
            android:id="@+id/pic_imageview"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="152dp"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/boy_avatar" android:layout_alignParentStart="true"
            android:layout_marginLeft="152dp"
            android:layout_alignParentLeft="true"/>
    <CheckBox
            android:id="@+id/female_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="173dp"
            android:layout_marginEnd="8dp"
            android:buttonTint="@color/hintTextColor"
            android:checked="true"
            android:text="Female"
            android:textColor="@color/textColor"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.804"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pic_imageview" android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" android:layout_marginLeft="59dp" android:layout_marginStart="59dp"
            android:layout_alignParentLeft="true"/>
    <CheckBox
            android:id="@+id/male_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="174dp"
            android:buttonTint="@color/hintTextColor"
            android:text="Male"
            android:textColor="@color/textColor"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.011"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pic_imageview"
            android:layout_alignParentTop="true" android:layout_alignParentStart="true"
            android:layout_marginLeft="273dp"
            android:layout_marginStart="273dp" android:layout_alignParentLeft="true"/>
    <EditText
            android:id="@+id/email_edittext"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/textColor"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="@color/textColor"
            android:textColorHint="@color/hintTextColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_alignTop="@+id/fullname_edittext"
            android:layout_marginTop="110dp"/>
    <EditText
            android:id="@+id/enterpass_edittext"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="282dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/textColor"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="@color/textColor"
            android:textColorHint="@color/hintTextColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/email_edittext" android:layout_alignParentTop="true"/>
    <EditText
            android:id="@+id/fullname_edittext"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/textColor"
            android:ems="10"
            android:hint="Full Name"
            android:inputType="textPersonName"
            android:textColor="@color/textColor"
            android:textColorHint="@color/hintTextColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.544"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/enterpass_edittext"
            android:layout_marginRight="8dp" android:layout_marginTop="227dp" android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            android:layout_alignParentLeft="true"/>
    <EditText
            android:id="@+id/birthday_edittext"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/textColor"
            android:ems="10"
            android:hint="Birthday "
            android:inputType="textPersonName"
            android:textColor="@color/textColor"
            android:textColorHint="@color/hintTextColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fullname_edittext"
            android:layout_alignTop="@+id/fullname_edittext"
            android:layout_marginTop="167dp"/>
    <EditText
            android:id="@+id/address_edittext"
            android:layout_width="279dp"
            android:layout_height="47dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/textColor"
            android:ems="10"
            android:hint="Address"
            android:inputType="textPersonName"
            android:textColor="@color/textColor"
            android:textColorHint="@color/hintTextColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/birthday_edittext" android:layout_marginBottom="-60dp"
            android:layout_alignBottom="@+id/birthday_edittext"/>
    <EditText
            android:id="@+id/phone_edittext"
            android:layout_width="279dp"
            android:layout_height="47dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/textColor"
            android:ems="10"
            android:hint="Phone Number"
            android:inputType="textPersonName"
            android:textColor="@color/textColor"
            android:textColorHint="@color/hintTextColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/phone_edittext"
            android:layout_marginTop="508dp" android:layout_alignParentTop="true"/>
    <Button
            android:id="@+id/register_button"
            android:layout_width="256dp"
            android:layout_height="42dp"
            android:layout_marginStart="78dp"
            android:layout_marginTop="584dp"
            android:background="@drawable/button_shape"
            android:text="Register"
            android:textColor="@android:color/background_light"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/phone_edittext" android:layout_alignParentStart="true"
            android:layout_marginLeft="78dp" android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"/>


</RelativeLayout>