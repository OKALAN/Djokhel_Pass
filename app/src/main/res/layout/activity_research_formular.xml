<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bacround_gradient"
        tools:context=".byt.Research_formular">

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/find_a_ride"
              android:textSize="40dp"
              android:textColor="@color/white"
              android:layout_marginTop="45dp"
              android:layout_alignParentTop="true"
              android:layout_alignParentStart="true"
              android:layout_marginLeft="22dp"
              android:layout_marginStart="22dp"
              android:layout_alignParentLeft="true"/>

    <TextView
            android:text="Departure from : "
            android:textColor="@color/hintTextColor"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_marginTop="202dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="67dp"
            android:layout_marginStart="67dp"
            android:layout_alignParentLeft="true"/>

    <Spinner
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:id="@+id/spinner_dept_from"
            android:spinnerMode="dialog"
            android:layout_marginTop="215dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="56dp"
            android:layout_marginStart="67dp"
            android:layout_alignParentLeft="true"/>

    <LinearLayout
            android:layout_width="280dp"
          android:layout_height="2dp"
          android:background="@color/white"
          android:layout_marginTop="262dp"
          android:layout_alignParentTop="true"
          android:layout_alignParentStart="true"
          android:layout_marginLeft="67dp"
          android:layout_marginStart="67dp"
          android:layout_alignParentLeft="true"/>

    <!--  -->

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Arrival to :"
              android:textColor="@color/hintTextColor"
              android:textSize="18dp"
              android:layout_alignParentStart="true"
              android:layout_marginLeft="67dp"
              android:layout_marginStart="67dp"
              android:layout_alignParentLeft="true"
              android:layout_marginTop="290dp"
              android:layout_alignParentTop="true"/>
    <Spinner
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:id="@+id/spinner_arrival_to"
            android:layout_marginTop="304dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="67dp"
            android:layout_marginStart="67dp"
            android:layout_alignParentLeft="true"/>

    <LinearLayout
            android:layout_width="280dp"
            android:layout_height="2dp"
            android:background="@color/white"
            android:layout_marginLeft="67dp"
            android:layout_marginStart="67dp"
            android:layout_marginTop="353dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"/>

    <!--  -->

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Travel date :"
            android:textColor="@color/hintTextColor"
            android:textSize="18dp"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="67dp"
            android:layout_marginStart="67dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="375dp"
            android:layout_alignParentTop="true"/>

    <EditText
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:textColor="@color/white"
            android:id="@+id/travel_dateEditext"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="67dp"
            android:layout_marginStart="67dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="391dp"
            android:layout_alignParentTop="true"
            android:textColorLink="@color/white"
            android:textCursorDrawable="@color/white"/>


    <LinearLayout
            android:layout_width="280dp"
            android:layout_height="2dp"
            android:background="@color/white"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="67dp"
            android:layout_marginStart="67dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="431dp"
            android:layout_alignParentTop="true"/>

    <Button android:id="@+id/findaRide_button"
            android:layout_width="256dp"
            android:layout_height="42dp"
            android:background="@drawable/button_shape"
            android:text="Find a ride"
            android:textColor="@android:color/background_light"
            android:textSize="16sp"
            android:layout_marginTop="566dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="78dp"
            android:layout_marginStart="78dp"
            android:layout_alignParentLeft="true"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Number of seats :"
              android:textColor="@color/hintTextColor"
              android:textSize="18dp"
              android:layout_marginTop="475dp"
              android:layout_alignParentTop="true"
              android:layout_alignParentStart="true"
              android:layout_marginLeft="67dp"
              android:layout_marginStart="67dp"
              android:layout_alignParentLeft="true"/>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginLeft="227dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentStart="true"
            android:layout_marginStart="227dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="471dp"
            android:layout_alignParentTop="true">

        <ImageButton
                android:id="@+id/btn_minus"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginRight="16dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/textView3"
                android:background="@null"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/bg_btn_minus"/>


        <TextView
                android:id="@+id/number_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/imageButton1"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:textSize="18dp"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="1"/>

        <ImageButton
                android:id="@+id/btn_plus"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:background="@null"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/bg_btn_plus"/>
    </LinearLayout>

</RelativeLayout>